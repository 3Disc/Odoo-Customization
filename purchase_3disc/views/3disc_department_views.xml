<?xml version="1.0" encoding="utf-8"?>
<!-- List of objects discribing how to format diffrent things in htlm. so 3disc.department.tree formats how 3disc.department is displayed as a tree -->
<odoo>

    <record id="department_tree_view" model="ir.ui.view">
        <field name="name">purchase_3disc.department.tree</field>
        <field name="model">purchase_3disc.department</field>
        <field name="arch" type="xml">
            <tree string="Variant Values">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    <record id="category_tree_view" model="ir.ui.view">
        <field name="name">purchase_3disc.category.tree</field>
        <field name="model">purchase_3disc.category</field>
        <field name="arch" type="xml">
            <tree string="Variant Values">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="department_view_form" model="ir.ui.view">
        <field name="name">purchase_3disc.department.form</field>
        <field name="model">purchase_3disc.department</field>
        <field name="arch" type="xml">
            <form string="Product Attribute">
            <sheet>
                <group name="main_fields" class="o_label_nowrap">
                    <label for="name" string="Attribute Name"/>
                    <field name="name" nolabel="1"/>
                    <field name="code"/>
                </group>
            </sheet>
            </form>
        </field>
    </record>
    <record id="category_view_form" model="ir.ui.view">
        <field name="name">purchase_3disc.category.form</field>
        <field name="model">purchase_3disc.category</field>
        <field name="arch" type="xml">
            <form string="Product Attribute">
            <sheet>
                <group name="main_fields" class="o_label_nowrap">
                    <label for="name" string="Attribute Name"/>
                    <field name="name" nolabel="1"/>
                    <field name="code"/>
                </group>
            </sheet>
            </form>
        </field>
    </record>

    <record id="department_action" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase_3disc.department</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="category_action" model="ir.actions.act_window">
        <field name="name">Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase_3disc.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="department_tree_view" model="ir.ui.view">
        <field name="name">purchase_3disc.department.tree</field>
        <field name="model">purchase_3disc.department</field>
        <field name="arch" type="xml">
            <tree string="Variant Values">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="category_tree_view" model="ir.ui.view">
        <field name="name">purchase_3disc.category.tree</field>
        <field name="model">purchase_3disc.category</field>
        <field name="arch" type="xml">
            <tree string="Variant Values">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    
</odoo>