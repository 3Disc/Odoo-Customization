<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_view_form_purchase" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.purchase</field>
		<field name="model">res.config.settings</field>
		<field name="priority" eval="25"/>
		<field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
		<field name="arch" type="xml">
			<xpath expr="//div[@data-key='purchase']" position="inside">
				<h2>Company Settings</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="content-group">
                            <div class="mt8">
                                <button name="%(purchase_3disc.department_action)d" icon="fa-arrow-right" type="action" string="Departments" class="btn-link"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="content-group">
                            <div class="mt8">
                                <button name="%(purchase_3disc.category_action)d" icon="fa-arrow-right" type="action" string="Sub-Categories" class="btn-link"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
		</field>
	</record>
</odoo>